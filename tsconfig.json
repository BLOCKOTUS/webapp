{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "public/*"],
  "compilerOptions": { 
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@@Components/*": ["components/*"],
      "@@Config/*": ["config/*"],
      "@@Fixtures/*": ["fixtures/*"],
      "@@Modules/*": ["modules/*"],
      "@@Routes/*": ["routes/*"],
      "@@Stores/*": ["stores/*"],
    }
  }
}
